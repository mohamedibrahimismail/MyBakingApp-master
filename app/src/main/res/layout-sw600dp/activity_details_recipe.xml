<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recipess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.santiago.bakingapp.DetailsRecipeActivity">


    <FrameLayout
        android:id="@+id/ingredients_7"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/stepsss"
        android:layout_width="270dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ingredients_7"
        android:layout_marginLeft="8dp">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/detail_step_7"
        android:layout_width="306dp"
        android:layout_height="627dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/stepsss"
        app:layout_constraintTop_toBottomOf="@+id/ingredients_7">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>

